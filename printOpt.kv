                lab_colorful.pos_hint = {'x': 1, 'y': 1}
                lab_colorless.pos_hint = {'x': 1, 'y': 1}
                btn_colorless.pos_hint = {'x': 1, 'y': 1}
                lab_colorless.disabled = True
                btn_colorless.disabled = True
                lab_colorful_text.pos_hint = {'x': 1, 'y': 1}
                btn_colorless_text.pos_hint = {'x': 1, 'y': 1}
                kb.opacity = 1
                kb.disabled = False
                kb_pos.opacity = 1
                kb_pos.disabled = False
        TextInput:
            id: pageNum_input
            opacity: 0
            disabled: True
            font_size: root.width*.02
            hint_text:'1-5,7,9-12 гэх мэт'
            pos_hint: {'center_x': 0.8, 'center_y': 0.7}
            size_hint: 0.265, 0.075
