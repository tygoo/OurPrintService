<ButtonRound@Button>:
    font_size: root.height*.2
    font_size: root.width*.2
    background_normal: ''
    background_color: 1,1,1,0
    size_hint: 0.15, 0.12
<Label_Checkbox@Label>:
    font_size: root.width*.035
    font_size: root.height*.035
    color: 0,0,0,1
    text_size: self.size
    halign: 'left'
    valign: 'middle'
<FloatLayout_background@FloatLayout>:
    id: bground
    canvas:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: root.width*0.03,root.width*0.03,root.width*0.03,root.width*0.03
<Label_kb@Label>:
    size_hint: 0.12, 0.15
    canvas:
        Color:
            rgba: rgba("#d9d9d9")
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: root.width*0.2,root.width*0.2,root.width*0.2,root.width*0.2
<Button_kb@Button>:
    color: 0,0,0,1
    background_normal: ''
    background_color: 1,1,1,0
    font_size: root.height*0.6
    size_hint: 0.12, 0.15
<PrintScreen>:
    name: "printOpt"
    id: printOpt
    #-----------------------------------------BACK AND PRINT BUTTON------------------------------------
    FloatLayout:
        Label:
            pos_hint: {'x': .02, 'y': 0.025}
            canvas:
                Color:
                    rgba: rgba("#d64f66")
                RoundedRectangle:
                    size: root.width*0.15,root.height*0.12
                    pos: self.pos
                    radius: root.width*0.03,root.width*0.03,root.width*0.03,root.width*0.03
        ButtonRound:
            id: offline_btn
            text: "Буцах"
            pos_hint: {'x': .02, 'y': 0.025}
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = "Offline"
                pageNum_input.text = ''
                copies_input.text = '1'
                slider.value = 1
                lab_colorful.pos_hint = {'x': .475, 'y': .275}
                root.ColorChoose(True)
                lab_all.opacity = 1
                lab_custom.opacity = 0
                pageNum_input.opacity = 0
                pageNum_input.disabled = True
                btn_custom.color = 0,0,0,1
                btn_all.color = 0.95,0.95,0.95,1
                all_caption.opacity = 1
                root.pageValue(True)
                pageNum_input.text = ''
                Error_comment.text = ''
                lab_colorful.pos_hint= {'x': .475, 'y': .275}
                lab_colorful.opacity = 1
                lab_colorless.disabled = False
                lab_colorless.opacity = 1
                lab_colorless.pos_hint = {'x': 0.465, 'y': 0.3}
                btn_colorless.disabled = False
                btn_colorless.opacity = 1
                btn_colorless.pos_hint = {'x': 0.7, 'y': 0.3}
                lab_colorful_text.opacity = 1
                lab_colorful_text.pos_hint = {'x': 0.4625, 'y': 0.125}
                btn_colorless_text.opacity = 1
                btn_colorless_text.pos_hint = {'x': .7025, 'y': .125}
                kb.opacity = 0
                kb.disabled = True
                kb_pos.opacity = 0
                kb_pos.disabled = True
        Label:
            pos_hint: {'x': .825, 'y': 0.025}
            canvas:
                Color:
                    rgba: rgba("#4fd188")
                RoundedRectangle:
                    size: root.width*0.15,root.height*0.12
                    pos: self.pos
                    radius: root.width*0.03,root.width*0.03,root.width*0.03,root.width*0.03
        ButtonRound:
            id: print_service
            text: "Хэвлэх"
            pos_hint: {'x': .825, 'y': 0.025}
            on_press: root.print_service()
    #-----------------------------------------SLIDE SHOWER SECTION------------------------------------
    Label:
        pos_hint: {'x': .03, 'y': .225}
        canvas:
            Color:
                rgba: rgba("#ebebeb")
            RoundedRectangle:
                size: root.width*0.4,root.height*0.725
                pos: self.pos
                radius: root.width*0.01,root.width*0.01,root.width*0.01,root.width*0.01
    FloatLayout:
        Image:
            size_hint: .3, .6
            pos_hint: {'x': .0775,'y': .32}
            id: imageView
            source: '/Users/macbook/Documents/python test/ScreenManager/ConvertedImage/Image1.png'
        #-----------------------RIGHT ARROW-----------------------
        ImageButton:
            source: "rightArrow.png"
            size_hint: (.035, .045)
            pos_hint: {'x': .375, 'y': .25}
            disabled: False if slider.value < 300 else True
            on_press: root.sliderFunc(1)
        #-----------------------LEFT ARROW------------------------
        ImageButton:
            source: "leftArrow.png"
            size_hint: (.035, .045)
            disabled: False if slider.value > 1 else True
            pos_hint: {'x': .045, 'y': 0.25}
            on_press: root.sliderFunc(-1)
        Slider:
            id: slider
            value: 1
            step: 1
            size_hint: .3, .02
            pos_hint: {'x':.0775, 'y':.265}
            on_value: root.sliderFunc(0)
        Label:
            id: slider_text
            text: "1"
            font_size: root.height*.0175
            font_size: root.width*.0175
            color: rgba("#333333")
            pos_hint: {'center_x': 0.225, 'center_y': 0.3}
    #-----------------------------------------PRINTER SETTING SECTION------------------------------------
    FloatLayout:
    #---------------- COPIES------------------
        Label:
            pos_hint: {'x': .45, 'y': .85}
            canvas:
                Color:
                    rgba: rgba("#ebebeb")
                RoundedRectangle:
                    size: root.width*0.5,root.height*0.1
                    pos: self.pos
                    radius: root.width*0.01,root.width*0.01,root.width*0.01,root.width*0.01
        Label_Checkbox:
            text: "ХУВИЛАХ ТОО"
            pos_hint: {'x': .475, 'y': .4}
        ImageButton:
            source: "upButton.png"
            pos_hint: {'x': 0.675, 'y': 0.8325}
            size_hint: 0.03, 0.125
            on_press: root.Copies_Num(1)
        ImageButton:
            source: "DownButton.png"
            pos_hint: {'x': 0.825, 'y': 0.8325}
