#: import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManagement:
    MainScreen:
    OfflineScreen:
    OnlineScreen:
    PrintScreen:

<MainScreen>:
    name:"Main"
    Label:
        id: clock
    FloatLayout:
        on_touch_move: root.pointTouch()
        Label:
            pos_hint: {'x': .175, 'y': 0.2}
            opacity:.8
            canvas:
                Color:
                    rgba: rgba("#b2edd4")
                RoundedRectangle:
                    size: root.width*0.3,root.height*0.6
                    pos: self.pos
                    radius: root.width*0.03,root.width*0.03,root.width*0.03,root.width*0.03
        ImageButton:
            source:'world.png'
            size_hint: .3, .4
            pos_hint: {'x': .175, 'y': 0.355}
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = "Online"
                root.soundMain()
        Label:
            text: "ОНЛАЙН ГОРИМ"
            pos_hint: {'x': -.175, 'y': -.2}
            font_size: root.height*0.05
            color: rgba("#17574a")
        Label:
            id: touchLabel
            opacity: .5
            pos_hint: {'x': .31, 'y': .21}
            canvas:
                Rectangle:
                    source: 'touchFinger.png'
                    size: root.width*0.04,root.height*0.04
                    pos: self.pos

    FloatLayout:
        Label:
            opacity: 1
            pos_hint: {'x': .525, 'y': 0.2}
            canvas:
                Color:
                    rgba: rgba("#f5dfda")
                RoundedRectangle:
                    size: root.width*0.3,root.height*0.6
                    pos: self.pos
                    radius: root.width*0.03,root.width*0.03,root.width*0.03,root.width*0.03
        ImageButton:
            source:'flashDrive.png'
            pos_hint: {'x': .525, 'y': .355}
            size_hint: .3, .4
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = "Offline"
                root.soundMain()
        Label:
            text: "ЭНГИЙН ГОРИМ"
            pos_hint: {'x': .175, 'y': -.2}
            font_size: root.height*0.05
            color: rgba("#17574a")
        Label:
            id: touchLabel
            opacity: .5
            pos_hint: {'x': .66, 'y': .21}
            canvas:
                Rectangle:
                    source: 'touchFinger.png'
                    size: root.width*0.04,root.height*0.04
                    pos: self.pos