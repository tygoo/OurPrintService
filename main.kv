#: import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManagement:
    MainScreen:
    OfflineScreen:
    OnlineScreen:
    PrintScreen:

<MainScreen>:
    name:"Main"
    GridLayout:
        cols: 2
        Button:
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = "Online"
            text: "Цахим Горим"
            font_size: 70
            background_normal: ''
            background_color: rgba('#e3b22b')
            size_hint: .4, 1
            pos: 100, 200

        Button:
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = "Offline"
            text: "Энгийн Горим"
            font_size: 70
            background_color: (0, 0.7, 0.3, 1)
            size_hint: .4, 1
            pos: 500, 200

