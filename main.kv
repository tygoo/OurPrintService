#: import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManagement:
    MainScreen:
    OfflineScreen:
    OnlineScreen:
    PrintScreen:

<MainScreen>:
    name:"Main"
    FloatLayout:
        Label:
            pos_hint: {'x': .075, 'y': 0.25}
            canvas:
                Color:
                    rgba: rgba("#b2edd4")
                RoundedRectangle:
                    size: root.width*0.4,root.height*0.65
                    pos: self.pos
                    radius: root.width*0.03,root.width*0.03,root.width*0.03,root.width*0.03
        ImageButton:
            source:'51e85384.png'
            size_hint: .45, .45
            pos_hint: {'x': .05, 'y': .4}
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = "Online"
        Label:
            text: "ОНЛАЙН ГОРИМ"
            pos_hint: {'x': -.225, 'y': -.15}
            font_size: root.height*0.05
            color: rgba("#17574a")
    FloatLayout:
        Label:
            pos_hint: {'x': .525, 'y': 0.25}
            canvas:
                Color:
                    rgba: rgba("#f5dfda")
                RoundedRectangle:
                    size: root.width*0.4,root.height*0.65
                    pos: self.pos
                    radius: root.width*0.03,root.width*0.03,root.width*0.03,root.width*0.03
        ImageButton:
            source:'flash_icon.png'
            pos_hint: {'x': .5, 'y': .4}
            size_hint: .45, .45
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = "Offline"
        Label:
            text: "ЭНГИЙН ГОРИМ"
            pos_hint: {'x': .225, 'y': -.15}
            font_size: root.height*0.05
            color: rgba("#17574a")
